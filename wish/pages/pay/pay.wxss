.pay-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 1000rpx;
    width: 600rpx;
    border-radius: 23rpx;
    background: rgba(99, 88, 157, 0.7);
    margin-top: 140rpx;
    position: relative;
}

.pay-img {
    width: 176rpx;
    height: 195rpx;
    margin-top: 50rpx;
}

.pay-head {
    margin-top: 30rpx;
}

.pay-headtex {
    margin-top: 20rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
}

.pay-txt {
    font-size: 36rpx;
    font-weight: bold;
    color: rgba(255, 255, 255, 1);
}

.pay-tag {
    width: 480rpx;
    height: 145rpx;
    margin-top: 20rpx;
    background: rgba(66, 57, 91, 1);
    border-radius: 10rpx;
}

.pay-tag-t {
    display: block;
    color: #fff;
    font-size: 24rpx;
    margin-left: 20rpx;
    margin-top: 10rpx;
}

.pay-tag-c {
    display: block;
    color: #fff;
    font-size: 24rpx;
    padding-left: 50rpx;
}

.list-img {
    float: left;
    display: inline-block;
    width: 95rpx;
    height: 100rpx;
    padding-left: 40rpx;
    margin-top: 20rpx;
}

.list-content {
    display: inline-block;
    float: left;
    height: 106rpx;
    width: 300rpx;
    padding-left: 25rpx;
    padding-right: 10rpx;
    margin-top: 20rpx;
}

.list-tex {
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 42rpx;
}

.pay-bot {
    width: 480rpx;
    height: 145rpx;
    margin-top: 90rpx;
    position: absolute;
    bottom: 10rpx;
}

.pay-bot-l {
    float: left;
    display: inline-block;
    width: 240rpx;
    height: 145rpx;
}

.pay-bot-r {
    float: left;
    position: relative;
    display: inline-block;
    width: 240rpx;
    height: 145rpx;
}

.write-btn {
    position: absolute;
    height: 60rpx;
    width: 200rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border-radius: 17px;
    box-shadow: 0px 0px 5px #e19429;
    background: #fed800;
    line-height: 60rpx;
}

.pay-bot-thro {
    color: #fff;
    font-size: 24rpx;
    display: block;
    width: 240rpx;
    text-align: center;
    text-decoration: line-through;
    margin-top: 15rpx;
}

.pay-bot-now {
    color: #fff;
    font-size: 36rpx;
    display: block;
    width: 240rpx;
    text-align: center;
}