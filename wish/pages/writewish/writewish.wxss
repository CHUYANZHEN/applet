.write-tab {
    margin-top: 20rpx;
    background: #42395B;
    border-radius: 5px;
    color: #9685B8;
    font-size: 26rpx;
    font-weight: 400;
    overflow: hidden;
    width:100%;
}

.write-tab-per {
    display: inline-block;
    width: 33.3%;
    /* height: 50rpx;
    line-height: 50rpx; */
    text-align: center;
    padding:10rpx 0;
}

.tab-active {
    color: #42395B;
    background: #998DBB;
}

.wirte-name {
    color: #9685B8;
    font-size: 26rpx;
    min-height: 50rpx;
    line-height: 50rpx;
    background: #42395B;
    border-radius: 10rpx;
    margin-top: 10rpx;
    padding:0 20rpx;
    width:100%;
    box-sizing: border-box;
}

.write-textarea {
    color: #9685B8;
    font-size: 26rpx;
    min-height: 250rpx;
    padding: 20rpx;
    background: #42395B;
    border-radius: 10rpx;
    margin-top: 10rpx;
    width:100%;
    box-sizing:border-box;
}

.write-type-tab {
    position: relative;
    /* width: 537rpx; */
    margin-top: 10rpx;
    color: #fff;
    font-size: 26rpx;
    font-weight: 400;
    width:100%;
    text-align: left;    
    height: 70rpx;
    line-height: 70rpx;
}

.type-tab {
    position: absolute;
    display: flex;
    width: 40%;
    background: #998DBB;
    border-radius: 10rpx;
    text-align: center;
    justify-content: center;
    align-items: center; 
    
}

.type1 {
    left: 0;
}

.type2 {
    right: 0;
}

.type-tab-img {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 5rpx solid #fed800;
    /* margin-top: 8rpx; */
    vertical-align: top;
    margin-right: 14rpx;
}

.type-tab-txt {
    color: #fff;
    font-size: 26rpx;
    height: 60rpx;
    line-height: 60rpx;
    display: inline-block;
}

.write-view-btn {
    position: relative;
    height: 60px;
    width: 600rpx;
    display: inline-block;
}

.write-btn {
    position: absolute;
    height: 70rpx;
    width: 300rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    border-radius: 12px;
    box-shadow: 0px 0px 5px #e19429;
    background: #fed800;
    line-height: 70rpx;
}

.checked {
    /* background: url("data:image/png;base64,") no-repeat;
    background-size: cover; */
    border:1rpx solid #fed800;
}